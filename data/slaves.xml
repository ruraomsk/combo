<?xml version="1.0" encoding="utf-8" ?> 
<slave> 
	<server name="center" description="Сбор всей информации в системе" 
	path="data/" timezone="Asia/Omsk" >
	</server>
	<!--
		Параметры для соединения с Postgresql	
		periob срок хранения данных в днях 
	-->
	<database ip="localhost" port="5432" base="combo" user="combo" password="combo" period="30" make="false">
	</database>
	<loggers name="log" >
		<logger port="5510" name="APAXL" description="Левый APAX щита"></logger>
		<logger port="5511" name="APAXR" description="Правый APAX щита"></logger>
	</loggers>
	<devices>
	<!--
		Параметры для устройств	
		type=slave 	устро2йство
			=dub	модбас мастер с дублированным каналом тогда нужно указать второй канал
			=mono	простой модбас
			-doza   Дозиметр
			=rtu 	modbus на RS-485
	-->
		<device name="dozs" description="Дозиметр текущие значения" type="doza" step="1000"
				port="5507" 
				load="doza.xml"></device>
		<device name="dus" description="БАРС ДУ Slave" type="slave" step="1000"
				port="5502" 
				load="du.xml"></device>
		<device name="baz1s" description="БАРС БАЗ1 Slave" type="slave" step="1000"
				port="5503" 
				load="baz1.xml"></device>
		<device name="baz2s" description="БАРС БАЗ2 Slave" type="slave" step="1000"
				port="5504" 
				load="baz2.xml"></device>
		<device name="ctrls" description="Общий котроль Slave" type="slave" step="1000"  
				port="5505" 
				load="ctrl.xml"></device>
		<device name="du" description="БАРС ДУ DubModbus" type="dub" step="1000"
				ip="192.168.10.35" port="502" ip2="192.168.20.35" port2="502" Restart="60" 
				load="du.xml"></device>
		<device name="baz1" description="БАРС БАЗ1 DubModbus" type="dub" step="1000" Restart="60"
				ip="192.168.10.35" port="503" ip2="192.168.20.35" port2="503"
				load="baz1.xml"></device>
		<device name="baz2" description="БАРС БАЗ2 DubModbus" type="dub" step="1000" Restart="60"
				ip="192.168.10.35" port="504" ip2="192.168.20.35" port2="504"
				load="baz2.xml"></device>
		<device name="fouts" description="Цифровые индикаторы Slave" type="slave" step="1000"
				port="5505" 
				load="fout.xml"></device>
		<device name="ctrls" description="Общий контроль Slave" type="slave" step="1000"
				port="5506" 
				load="ctrl.xml"></device>
		<device name="fout" description="Цифровые индикаторы Вывод" type="mono" step="1000" Restart="60"
			    port="5505" ip="127.0.0.1"
				tty="COM1" baud="9600" databits="8" parity="N" stopbits="1"  
				load="fout.xml"></device>
		<device name="ctrl" description="Общий котроль сторона РПУ" type="dub" step="1000" Restart="60"
				ip="192.168.10.40" port="502" ip2="192.168.10.41" port2="502"
				load="ctrl.xml"></device>
	</devices>
	<extends step="1000">
		<load file="init.ext"> </load>
		<load file="main.ext"> </load>
	</extends>
</slave>
